<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/barcode_number_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Номер книги: 1234567890234"
        android:textSize="@dimen/text_standard"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/librarian_waiting_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ожидаем подтверждения библиотекаря..."
        android:textSize="@dimen/text_standard"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/cancel_button"
        android:textSize="@dimen/button_text_standard"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Отмена"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>