<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/barcode_number_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Номер книги: 1234567890234"
        android:textSize="@dimen/text_standard"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_calendar"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/return_date_textview"
            android:layout_marginStart="10dp"
            android:textSize="@dimen/text_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вернуть до 20.20.2020"/>
    </LinearLayout>

    <Button
        android:id="@+id/book_extend_button"
        android:textSize="@dimen/button_text_standard"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Продлить книгу"/>

    <Button
        android:visibility="gone"
        android:id="@+id/book_return_button"
        android:textSize="@dimen/button_text_standard"
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Вернуть книгу"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>